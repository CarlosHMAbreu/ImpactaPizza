@model Pizzaria.Models.Usuario
@{
    ViewData["Title"] = "Cadastro de Administrador";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-success">
                <div class="card-header bg-success text-white text-center py-3">
                    <h3><i class="fas fa-user-shield me-2"></i>Cadastro de Administrador</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CadastroAdmin" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="NomeCompleto" class="form-label fw-bold">
                                <i class="fas fa-user me-2"></i>Nome Completo
                            </label>
                            <input asp-for="NomeCompleto" class="form-control" />
                            <span asp-validation-for="NomeCompleto" class="text-danger small"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Telefone" class="form-label fw-bold">
                                <i class="fas fa-phone me-2"></i>Telefone
                            </label>
                            <input asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger small"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Endereco" class="form-label fw-bold">
                                <i class="fas fa-map-marker-alt me-2"></i>Endere√ßo
                            </label>
                            <input asp-for="Endereco" class="form-control" />
                            <span asp-validation-for="Endereco" class="text-danger small"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="fas fa-envelope me-2"></i>Email
                            </label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="form-group mb-4">
                            <label asp-for="Senha" class="form-label fw-bold">
                                <i class="fas fa-lock me-2"></i>Senha
                            </label>
                            <input asp-for="Senha" type="password" class="form-control" />
                            <span asp-validation-for="Senha" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Cadastrar Administrador
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}