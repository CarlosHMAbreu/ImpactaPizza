@model List<Pizzaria.Models.Pizza>
@{
    ViewData["Title"] = "Gerenciar Sabores de Pizza";
    Layout = "_Layout";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gerenciar Sabores de Pizza</h1>
        <a href="/Pizza/Cadastrar" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Nova Pizza
        </a>
    </div>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success">@TempData["Sucesso"]</div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Preço</th>
                    <th>Disponível</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pizza in Model)
                {
                    <tr>
                        <td>@pizza.Nome</td>
                        <td>@pizza.Descricao</td>
                        <td>R$ @pizza.Preco.ToString("0.00")</td>
                        <td>
                            @if (pizza.Disponivel)
                            {
                                <span class="badge bg-success">Sim</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Não</span>
                            }
                        </td>
                        <td>
                            <a href="/Pizza/Editar/@pizza.Id" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form asp-action="Excluir" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@pizza.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" 
                                        onclick="return confirm('Tem certeza que deseja excluir esta pizza?')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>