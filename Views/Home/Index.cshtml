@{
    ViewData["Title"] = "Página Inicial";
    Layout = "_Layout";
}

<div class="container-fluid bg-light" style="background-image: url('/images/fundopizza.png'); background-size: cover; background-position: center; min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 10px 0;">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card border-0 shadow-lg rounded-3">
            <div class="card-body p-4 text-center">
                
                <!-- Ícone de pizza -->
                <div class="mb-3 text-danger">
                    <i class="fas fa-pizza-slice fa-2x"></i>
                </div>
                
                <!-- Título principal -->
                <h1 class="card-title text-primary fw-bold mb-2 h4">Seja Bem-Vindo!</h1>
                
                <!-- Subtítulo -->
                <p class="card-text text-muted small mb-3">
                    À melhor pizzaria da cidade! Sabores incríveis feitos com ingredientes frescos 
                    e amor. Peça online e receba em casa!
                </p>
                
                <!-- Botões de ação -->
                <div class="d-flex flex-column flex-sm-row justify-content-center gap-2 mb-3">
                    <a href="/Auth/Login" class="btn btn-primary btn-sm">
                        <i class="fas fa-sign-in-alt me-1"></i>Fazer Login
                    </a>
                    <a href="/Auth/Cadastro" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-user-plus me-1"></i>Criar Conta
                    </a>
                </div>
                
                <!-- Ícones decorativos -->
                <div class="mt-3 text-muted" style="font-size: 0.8rem;">
                    <i class="fas fa-cheese me-1"></i>
                    <i class="fas fa-bread-slice me-1"></i>
                    <i class="fas fa-pepper-hot me-1"></i>
                    <i class="fas fa-ice-cream me-1"></i>
                    <i class="fas fa-hamburger"></i>
                </div>
                
            </div>
        </div>
    </div>
</div>